pipeline {
    agent any

    stages {
        stage('Checkout Code From Git') {
            steps {
                git url: 'https://github.com/yourusername/automated_test_thitikorn.git', branch: 'main'
            }
        }

        stage('Install Robot Framework') {
            steps {
                sh 'pip install robotframework'
                sh 'pip install robotframework-seleniumlibrary'
            }
        }

        stage('Run login_test.robot') {
            steps {
                sh 'robot Tests/assignment2/login_test.robot'
            }
        }

        stage('Publish Results') {
            steps {
                robot outputDirectory: '.' 
            }
        }
    }
}
